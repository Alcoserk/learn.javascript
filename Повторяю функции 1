function sumInput(){
    let total = 0;
    while(true){
        let inputNum = prompt("Введите число");
        // Если ввод пустой или null, выходим из цикла
        if (inputNum === "" || inputNum === null) {
            break;
        }
        if(isFinite(inputNum)){
            total += +inputNum; // Преобразуем строку в число с помощью унарного плюса
        } else {
            alert("Вы ввели не число");
            break;
        }
    }
    alert(total);
};

sumInput();



function sumInput(){ // через массив
    let total = [];
    let sum = 0
    while(0 < 1){
        let inputNum = prompt("Введите число");
        if(inputNum === "" || inputNum === null){
            alert("Вы ввели не число");
            break;
        }
        let number = parseInt(inputNum);
        if(!isNaN(number)){
            sum += number;
        }else{
            break;
        };
    }
    alert(sum);
};

sumInput();
